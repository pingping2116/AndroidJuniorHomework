<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="62.5dp"
        android:layout_marginEnd="62.5dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="148.9dp"
                android:layout_height="30.3dp"
                android:src="@drawable/fill_1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="88dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColorHint="#e4e4e4"
                android:id="@+id/username"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="196dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="Username"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColorHint="#e4e4e4"
                android:id="@+id/password"
                app:layout_constraintTop_toBottomOf="@id/username"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="Password"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_group"
                app:layout_constraintTop_toBottomOf="@id/password"
                android:layout_marginTop="22.5dp">
                <CheckBox
                    style="@style/login_text"
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Remeber me"/>
                <TextView
                    style="@style/login_text"
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Fogot password?"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_button"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/text_group"
                android:layout_marginTop="22.5dp"
                android:background="@drawable/login_button"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connect"
                android:text="or connect with"
                android:textColor="#b2b2b2"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/login_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="26.5dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_button_group"
                app:layout_constraintTop_toBottomOf="@id/connect"
                android:layout_marginTop="26.5dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fb"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tw"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_button"
                android:textAllCaps="false"
                android:text="Sign Up With E-mail"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/login_button_group"
                android:layout_marginTop="85.5dp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/signup_button"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>