<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="scroll_button_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="constraint_button_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:width">200dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/button_effect</item>
    </style>

    <style name="login_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>